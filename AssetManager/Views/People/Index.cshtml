@using AssetManager.ViewModels
@model PersonViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between">
<h2>People</h2>
<button type="button" id="addNewPerson" class="btn btn-primary h-25" >Add Person</button>
</div>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">People ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email Address</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var p in Model.People)
                {
                    <tr>
                        <td>@p.PersonId</td>
                        <td>@p.FirstName</td>
                        <td>@p.LastName</td>
                        <td>@p.Email</td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-secondary" type="button" id="personDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-bars"></i>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="personDropdown">
                                    <li><button class="dropdown-item" type="button">Edit</button></li>
                                    <li><button class="dropdown-item" type="button">Delete</button></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div id="newPersonModal" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <partial name="_CreateEditModal" model=Model.NewPerson/>
            </div>
        </div>
    </div>


</div>

<script>

    $("#addNewPerson").click(function(e){
        $("#newPersonModal").modal("show");
    });

</script>
