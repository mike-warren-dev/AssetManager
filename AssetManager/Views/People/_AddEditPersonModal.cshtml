@using AssetManager.Enums;
@using AssetManager.DTOs;

@model PersonCreateDto

<div>
    @using (Html.BeginForm("AddEdit", "People"))
    {
        <div class="modal-header" style="background-color:#F2F2F2">
            <h5 class="modal-title text-black">Add Person</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

            @Html.AntiForgeryToken()

            <input asp-for="PersonId" type="hidden"/>

            <label asp-for="FirstName">First Name</label><span style="color:red">*</span>
            <input asp-for="FirstName" class="form-control"/>
            <div style="height:18px">
                <span asp-validation-for="FirstName" class="text-danger small"></span>
            </div>

            <label asp-for="LastName">Last Name</label><span style="color:red">*</span>
            <input asp-for="LastName" class="form-control"/>
            <div style="height:18px">
                <span asp-validation-for="LastName" class="text-danger small"></span>
            </div>

            <label asp-for="Email">Email</label><span style="color:red">*</span>
            <input asp-for="Email" class="form-control" />
            <div style="height:18px">
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            
            <label asp-for="RoleId">Role</label><span style="color:red">*</span>
            <select asp-for="RoleId" class="form-select"
                    asp-items="Html.GetEnumSelectList<Role>()">
                <option disabled selected class="text-muted">select</option>
            </select>
            <div style="height:18px">
                <span asp-validation-for="RoleId" class="text-danger small"></span>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    }
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>