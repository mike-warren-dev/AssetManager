@using AssetManager.DTOs

@model List<OrderDisplayDto>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between">
    <h2>Orders</h2>
    <button type="button" id="addNewOrder" class="btn btn-primary h-25" onclick="addEditOrder(0)">Add Order</button>
</div>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Order ID</th>
                <th scope="col">External Order ID</th>
                <th scope="col">Vendor</th>
                <th scope="col">Products</th>
                <th scope="col">Cost</th>
                <th scope="col">Purchaser</th>
                <th scope="col">Approver</th>
                <th scope="col">Approved</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var o in Model)
                {
                    <tr>
                        <td class="align-middle">@o.OrderId</td>
                        <td class="align-middle">@o.ExternalOrderId</td>
                        <td class="align-middle">@o.VendorId</td>
                        <td class="align-middle">
                        @{
                            if(o.Products != null && o.Products.Any())
                            {
                                <ul style="margin-bottom: 0px;">
                                    @{foreach (var p in o.Products)
                                        {
                                            <li>@p.ToString()</li>
                                        }         
                                    }
                                </ul>
                            }
                        }    
                        </td>
                        <td class="align-middle">@o.Cost.ToString("C2")</td>
                        <td class="align-middle">@o.PurchaserId</td>
                        <td class="align-middle">@o.ApproverId</td>
                        <td class="align-middle">@o.ApprovedDttm?.ToString("g")</td>
                        <td class="align-middle">
                            <div class="dropdown">
                                <button class="btn btn-secondary" type="button" id="orderDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-bars"></i>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="orderDropdown">
                                    <li><button class="dropdown-item" type="button" onclick="addEditOrder(@o.OrderId)">Edit</button></li>
                                    <li><button class="dropdown-item" type="button" onclick="confirmDelete(@o.OrderId)">Delete</button></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }   
            }
        </tbody>
    </table>

    <div id="newOrderModal" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div id="newOrderModalContents" class="modal-content">
            </div>
        </div>
    </div>

    <div id="deleteConfirmation" class="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="background-color:lightpink">
                    <h5 class="modal-title text-white">Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex justify-content-center align-items-center" style="height: 100px; font-size:1.25rem">
                    <div>Are you sure you want to delete this order?</div>
                </div>
                <div class="modal-footer d-flex justify-content-between">
                    <button id="deleteOrderButton" type="button" class="btn btn-danger" data-bs-dismiss="modal" onclick="deleteOrder(this)">Delete</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
    function addEditOrder(orderId){
        url = `/Orders/AddEdit/${orderId}`;
        $("#newOrderModal").modal("show");
        $("#newOrderModalContents").load(url);
    }

    function confirmDelete(orderId){
        $("#deleteConfirmation").modal("show");
        $("#deleteOrderButton").attr("data-id", `${orderId}`);
    }

    function deleteOrder(el){
        var orderId = $(el).attr("data-id");
        var url = `/Orders/Delete/${orderId}`;

        $.ajax({
            method: "DELETE",
            url: url,
            success: function (data, textStatus) {
                if (textStatus == 'success') {
                    location.href = "/Orders";
                }
            }
        });
    }

</script>
